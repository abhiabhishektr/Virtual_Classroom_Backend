# Production Environment Configuration
# Copy this file to .env.production and fill in production values

# Server Configuration
PORT=5000
NODE_ENV=production

# Database Configuration (Use Atlas or production MongoDB URI)
MONGO_URI=mongodb+srv://<USER>:<PASS>@<CLUSTER>.mongodb.net

# JWT Secret (MUST be different from development - use strong random string)
JWT_SECRET=

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Razorpay Payment Gateway (Production keys)
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# Email Configuration (Production SMTP)
EMAIL_USER=
EMAIL_PASS=

# Google OAuth Configuration (Production credentials)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Frontend URL (Production domain)
DEFAULT_FRONTEND_LINK=https://yourdomain.com
